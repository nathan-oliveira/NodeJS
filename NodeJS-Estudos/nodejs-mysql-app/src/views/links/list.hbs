<div class="container p-4">
    <div class="row">
        <div class="col-md-12" style="margin-top: -1%;">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Todos Links</li>
                </ol>
            </nav>
        </div>
    </div>
    <div class="row">
        {{#each links}}
            <div class="col-md-3 mt-2" style="margin-top: 1%;">
                <div class="card text-center">
                    <div class="card-body">
                        <a href="{{url}}" target="_blank">
                            <h3 class="card-title text-uppercase">
                                {{title}}
                            </h3>
                        </a>
                        <p class="m-2">{{description}}</p>
                        <p>{{timeago created_at}}</p>
                        <a href="/links/delete/{{id}}" class="btn btn-danger btn-sm">Excluir Link</a>
                        <a href="/links/edit/{{id}}" class="btn btn-secondary btn-sm">Editar</a>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="col-md-4 mx-auto" style="margin-top: 1%;">
                <div class="card card-body text-center">
                    <p>NÃ£o existe links Salvos</p>
                    <a href="/links/add">Criar Link!</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>