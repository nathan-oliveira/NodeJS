<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{link.id}}" method="POST">
                        <div class="form-group">
                            <input value="{{link.title}}" type="text" class="form-control" name="title" placeholder="Título" autofocus>
                        </div>
                        <div class="form-group">
                            <input value="{{link.url}}" type="url" class="form-control" name="url" placeholder="URL ex: (http://google.com)">
                        </div>
                        <div class="form-group">
                            <textarea rows="2" class="form-control" name="description" placeholder="Descrição">{{link.description}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Salvar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>